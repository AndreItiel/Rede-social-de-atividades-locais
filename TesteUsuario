import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

class UsuarioTest {

    @Test
    void testCriar() {
        
        Localizacao localizacao = new Localizacao(0.0, 0.0, "Endereco Teste");
        Usuario usuario = new Usuario(1, "Usuario Teste", "teste@example.com", "senhaTeste", localizacao);

        
        System.setIn(new java.io.ByteArrayInputStream("Novo Nome\nnovoemail@example.com\nnovaSenha".getBytes()));

        
        usuario.criar();

        
        assertEquals("Novo Nome", usuario.getNome());
        assertEquals("novoemail@example.com", usuario.getEmail());
        assertEquals("novaSenha", usuario.getSenha());
    }

    @Test
    void testEditar() {
        
        Localizacao localizacao = new Localizacao(0.0, 0.0, "Endereco Teste");
        Usuario usuario = new Usuario(1, "Usuario Teste", "teste@example.com", "senhaTeste", localizacao);

        
        System.setIn(new java.io.ByteArrayInputStream("Novo Nome\nnovaSenha".getBytes()));

        
        usuario.editar();

        
        assertEquals("Novo Nome", usuario.getNome());
        assertEquals("novaSenha", usuario.getSenha());
    }

    
}
