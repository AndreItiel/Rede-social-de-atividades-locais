import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

class GrupoTest {

    @Test
    void testCriar() {
        
        Usuario administrador = new Usuario("AdminTeste");
        Grupo grupo = new Grupo(1, "Grupo Teste", administrador, "Descrição Teste");

        
        System.setIn(new java.io.ByteArrayInputStream("Novo Nome do Grupo\nNova Descrição do Grupo".getBytes()));

        
        grupo.criar();

        
        assertEquals("Novo Nome do Grupo", grupo.getNome());
        assertEquals("Nova Descrição do Grupo", grupo.getDescricao());
    }

    @Test
    void testEditar() {
        
        Usuario administrador = new Usuario("AdminTeste");
        Grupo grupo = new Grupo(1, "Grupo Teste", administrador, "Descrição Teste");

        
        System.setIn(new java.io.ByteArrayInputStream("Novo Nome do Grupo\nNova Descrição do Grupo".getBytes()));

        
        grupo.editar();

        
        assertEquals("Novo Nome do Grupo", grupo.getNome());
        assertEquals("Nova Descrição do Grupo", grupo.getDescricao());
    }

    
}
