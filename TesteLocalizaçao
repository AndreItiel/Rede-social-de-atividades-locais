import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

class LocalizacaoTest {

    @Test
    void testCriar() {
        
        Localizacao localizacao = new Localizacao(0.0, 0.0, "Endereco Teste");

        
        System.setIn(new java.io.ByteArrayInputStream("1.0\n2.0\nNovo Endereco".getBytes()));

        
        localizacao.criar();

        
        assertEquals(1.0, localizacao.getLatitude());
        assertEquals(2.0, localizacao.getLongitude());
        assertEquals("Novo Endereco", localizacao.getEndereco());
    }

    @Test
    void testEditar() {
        
        Localizacao localizacao = new Localizacao(0.0, 0.0, "Endereco Teste");

        
        System.setIn(new java.io.ByteArrayInputStream("3.0\n4.0\nOutro Endereco".getBytes()));

        
        localizacao.editar();

        
        assertEquals(3.0, localizacao.getLatitude());
        assertEquals(4.0, localizacao.getLongitude());
        assertEquals("Outro Endereco", localizacao.getEndereco());
    }

    
}
